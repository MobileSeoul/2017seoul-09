<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:background="@drawable/translate_border"
        android:divider="@color/colorPrimary"
        android:dividerPadding="5dp"
        android:showDividers="middle"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_margin="3dp">
            <!--ID-->
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="물품 ID"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_id"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="id"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <!--분류-->
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="분류"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_category"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="category"/>
        </TableRow>

        <TableRow
            android:layout_margin="3dp">
            <!--이름-->
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="물품명"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="name"/>
        </TableRow>

        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="접수 날짜"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_getdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="get date"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="보관장소"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_takeplace"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="takeplace 보관장소"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="연락처"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_take_tel"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:text="take_tel 전화번호"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="습득처"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_getplace"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="getposition or getplace"/>
        </TableRow>
        <TableRow
            android:layout_margin="3dp">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="물품상태"/>
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/find_detail_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="status"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp">

            <ScrollView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:clipToPadding="false"
                android:fadeScrollbars="true"
                android:fillViewport="false"
                android:scrollbars="none"
                android:visibility="visible">

                <TextView

                    android:id="@+id/find_detail_thing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="20"
                    android:maxLines="20"
                    android:text="notic"
                    android:textColor="@android:color/black" />"
            </ScrollView>

            <!--<Space-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->
        </TableRow>

    </TableLayout>








</LinearLayout>